<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--dialog activation-->
    <style name="ActivationDialogTextView">
        <item name="android:textColor">@color/activation_code_color</item>
        <item name="android:text">@string/dialog_activation_code_title</item>
    </style>

    <style name="ActivationDialogView">
        <item name="android:background">@color/activation_code_color</item>
    </style>

    <style name="ActivationDialogImageView">
        <item name="android:tint">@color/activation_code_color</item>
    </style>

    <style name="ActivationDialogEditText">
        <item name="android:background">@color/activation_code_bg</item>
        <item name="android:hint">@string/activation_code</item>
        <item name="android:layout_width">@dimen/activation_code_input_width</item>
        <item name="android:textSize">@dimen/activation_code_input_textsize</item>
        <item name="android:textColorHint">@color/activation_code_color</item>
    </style>

    <style name="ActivationDialogButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/activation_code_btn_textSize</item>
        <item name="android:background">@color/activation_code_color</item>
        <item name="android:fontFamily">@font/iran_sans_bold</item>
        <item name="android:layout_width">85dp</item>
        <item name="android:padding">8dp</item>
    </style>
    <!--end of dialog activation-->

</resources>
